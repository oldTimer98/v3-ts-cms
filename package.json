    "@vueuse/core": "^10.5.0",
    "autoprefixer": "^10.4.16",
    "commitizen": "^4.3.0",
    "commitlint": "^18.2.0",
    "cssnano": "^6.0.1",
    "dayjs": "^1.11.10",
    "echarts": "^5.4.3",
    "element-plus": "^2.4.1",
